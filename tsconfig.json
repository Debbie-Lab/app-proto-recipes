{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "listEmittedFiles": true,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "Node",
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "pretty": true, 
    "strictNullChecks": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {}
  },
  "include": [
    "./src/**/*"
  ]
}
